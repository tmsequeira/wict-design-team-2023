
#include "MQ131.h"

void setup() {
  Serial.begin(115200);

  // Initiate the MQ131 sensor
  // - Heater control on pin 2
  // - Sensor analog read on pin A0
  // - Model LOW_CONCENTRATION
  // - Load resistance RL of 1MOhms (1000000 Ohms)
  MQ131.begin(2,A0, LOW_CONCENTRATION, 1000000);  

  Serial.println("MQ131 calibrating...");
  MQ131.calibrate();
  Serial.println("MQ131 is calibrated!");
}

void loop() {
  Serial.println("Sampling...");
  MQ131.sample();
  Serial.print("Concentration O3 : ");
  Serial.print(MQ131.getO3(PPM));
  Serial.println(" ppm");
  if (MQ131.getO3(PPM) > 0.1 ) {
    Serial.print("O3 Concentration levels: High Health Risk.");
  }
  if (MQ131.getO3(PPM) > 0.086 ) {
    Serial.print("O3 Concentration levels: Moderate Health Risk.");
  }
  delay(30000);
}

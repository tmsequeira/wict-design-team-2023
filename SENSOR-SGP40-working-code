#include "SparkFun_SGP40_Arduino_Library.h"
#include <Wire.h>

// SGP40 class with object VOCSensor
SGP40 VOCSensor;

void setup() {
  Serial.begin(115200);
  Wire.begin();

  // Uncomment this line to print useful debug messages to Serial
  VOCSensor.enableDebugging(); 

  //Initialize sensor
  if (VOCSensor.begin() == false)
  {
    Serial.println(F("SGP40 not detected. Check connections. Freezing..."));
    while (1)
      ; // Do nothing more
  }
}

void loop() {
  Serial.print(F("VOC Index is: "));
  
  //Get the VOC Index using the default RH (50%) and T (25C)
  Serial.println(VOCSensor.getVOCindex()); 

  //Wait 1 second - the Sensirion VOC algorithm expects a sample rate of 1Hz
  delay(1000);
}
